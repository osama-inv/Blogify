@{
}

@model IEnumerable<BlogPostDto>
<h2>Trending Now</h2>
<div class="TrendContent">
    @foreach (BlogPostDto blogpost in Model)
    {

        <div class="BlogTrend">
            <div class="headPost">
                <div class="info-bt">
                    <h3><a href="/ShowBlog/@blogpost.Id">@blogpost.Title</a></h3>
                    <p><a href="/blogger/@blogpost.AutherName" class="a-tag">@@@blogpost.AutherName</a></p>
                </div>
            </div>
        </div>
    }
</div>